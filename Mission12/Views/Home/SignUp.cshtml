
@{
    ViewData["Title"] = "Appointment Sign Up";

    string sun = "03/27/2022";
    string mon = "03/28/2022";
    string tue = "03/29/2022";
    string wed = "03/30/2022";
    string thu = "03/31/2022";
    string fri = "04/01/2022";
    string sat = "04/02/2022";
}
@model List<Appointment>


<h2>Appointment Sign Up</h2>

<div class="container">
    <div class="row">
        <div class="col-3">
            <a class="btn btn-primary btn-block" asp-controller="Home" asp-action="SignUp" asp-route-showdate="@sun">Sunday 3/27</a>
            <a class="btn btn-primary btn-block" asp-controller="Home" asp-action="SignUp" asp-route-showdate="@mon">Monday 3/28</a>
            <a class="btn btn-primary btn-block" asp-controller="Home" asp-action="SignUp" asp-route-showdate="@tue">Tuesday 3/29</a>
            <a class="btn btn-primary btn-block" asp-controller="Home" asp-action="SignUp" asp-route-showdate="@wed">Wednesday 3/30</a>
            <a class="btn btn-primary btn-block" asp-controller="Home" asp-action="SignUp" asp-route-showdate="@thu">Thursday 3/31</a>
            <a class="btn btn-primary btn-block" asp-controller="Home" asp-action="SignUp" asp-route-showdate="@fri">Friday 4/1</a>
            <a class="btn btn-primary btn-block" asp-controller="Home" asp-action="SignUp" asp-route-showdate="@sat">Saturday 4/2</a>
        </div>

        <div class="col">
            <table class="table table-bordered table-striped">
                <thead class="font-weight-bold">
                    <tr>
                        <td>@Model[0].Time.ToString("M")</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in Model)
                    {
                        <tr>
                            <td><a class="btn btn-primary btn-block" asp-action="GroupForm" asp-route-a="@a.AppointmentId">@a.Time.ToString("hh:mm tt")</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


