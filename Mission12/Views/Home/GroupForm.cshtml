@{
    ViewData["Title"] = "Group Information";
}

@model Mission12.Models.Group

<h1>Enter your groups information:</h1>

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>


        <input type="hidden" asp-for="GroupId" value="@ViewBag.GID"/>

        <label asp-for="Name">Name:</label>
        <input asp-for="Name" /><br />

        <label asp-for="Size">Size:</label>
        <input asp-for="Size" /><br />

        <label asp-for="Email">Email:</label>
        <input asp-for="Email" /><br />

        <label asp-for="Phone">Phone:</label>
        <input asp-for="Phone" /><br />

        <input type="hidden" asp-for="AppointmentId" value="@ViewBag.Appt"/>
        @*<input type="hidden" asp-for="Appointment.Available" value="false"/>*@

        <button class="btn btn-primary" type="submit">Finalize Appointment</button>

    </form>
</div>